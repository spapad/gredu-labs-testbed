{% extends "layout.twig" %}

{% import "schools/form.twig" as macros %}

 {% block content %}
                <div id="school-info">
                    <p>
                        <h1>Φόρμα εκδήλωση ενδιαφέροντος</h1>
                        <br>
                        Σε αυτή την καρτέλα ........
                    </p>
                </div>
                 


             {% block schoolContent %}
        <form  method="post" action="" class="form-horizontal" >
                    <div class="modal-body">
                        {{ macros.input('name', 'Όνομα', '', 'text', {'required': ''}) }}
                        {{ macros.input('surname', 'Επίθετο', '', 'text', {'required': ''}) }}
                        {{ macros.select('eidikothta', 'Ειδικότητα', branches, '', {'required': ''}) }}
                        {{ macros.input('arithmitroou', 'Αριθμόε Μητρώου', '', 'text', {'required': ''}) }}
                        {{ macros.input('telef', 'Τηλέφωνο', '', 'text', {'required': ''}) }}
                        {{ macros.input('email', 'Email', '', 'text', {'required': ''}) }}
                        {{ macros.input('school', 'Σχολείο που υπηρετει', '', 'text', {'required': ''}) }}
                        {{ macros.input('schooltelef', 'Τηλέφωνο Σχολείου', '', 'text', {'required': ''}) }}
                                                
                        
                        {{ macros.text('comments', 'Σχόλια/Παρατηρήσεις', form.values.comments) }}
                        <input type="hidden" name="id" value="">
                    </div>

             <div class="form-group text-center">
                        <button name="submit" value="submit" type="submit" class="btn btn-lg btn-primary">Υποβολή</button>
                        <input type="hidden" name="id" value="{{ form.values.id }}">
            </div>
             <input type="hidden" name="{{ csrf.name_key }}" value="{{ csrf.name }}">
             <input type="hidden" name="{{ csrf.value_key }}" value="{{ csrf.value }}">
        </form>

        
    {% endblock %}

{% endblock %}

{% block inlinejs %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.2.3/backbone-min.js"></script>
{% endblock %}